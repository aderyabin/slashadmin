- if @routing.batch_actions?
  = form_tag({ :action => "dispatch_batch" }) do
    .index-actions
      - if @routing.action_allowed? :new
        = link_to I18n.t("admin.actions.new"), { :action => "new" }, :class => "btn"
      - if @routing.action_allowed? :destroy
        = button_tag I18n.t("admin.actions.destroy"), :name => "batch_action", :value => "destroy", :id => nil, :class => "btn btn-danger"

      = render_action_items
- else
  .index-actions
    - if @routing.action_allowed? :new
      = link_to I18n.t("admin.actions.new"), { :action => "new" }, :class => "btn"
    
    = render_action_items

  = raw @table
  
= paginate @objects, :theme => "slashadmin_theme"
